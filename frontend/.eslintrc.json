{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["react-app", "eslint:recommended", "airbnb", "plugin:prettier/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "max-len": ["error", {
      "code": 80
    }],
    "react/jsx-one-expression-per-line": "off"
  }
}
